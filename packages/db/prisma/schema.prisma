generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
 }

model User {
  id                             String        @id @default(cuid())
  username                       String        @unique
  firstName String?
  lastName String?
  email                          String        @unique
  password                       String
  avatar                         String    @default("avatar1.svg")
  createdAt                      DateTime      @default(now())
  Friend_Friend_receiverIdToUser Friend[]      @relation("Friend_receiverIdToUser")
  Friend_Friend_senderIdToUser   Friend[]      @relation("Friend_senderIdToUser")
  QuizAttempt                    QuizAttempt[]
  hostedRooms Room[]      @relation("RoomHost")
  roomPlayers RoomPlayer[]
  answers     PlayerAnswer[]
  events      RoomEvent[]
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  icon      String   @default("ðŸ“¦")
  Quiz      Quiz[]
}

model Friend {
  id                           String       @id @default(uuid())
  senderId                     String
  receiverId                   String
  status                       FriendStatus @default(PENDING)
  createdAt                    DateTime     @default(now())
  User_Friend_receiverIdToUser User         @relation("Friend_receiverIdToUser", fields: [receiverId], references: [id])
  User_Friend_senderIdToUser   User         @relation("Friend_senderIdToUser", fields: [senderId], references: [id])

  @@unique([senderId, receiverId])
}

model Option {
  id         String   @id @default(uuid())
  questionId String
  text       String
  isCorrect  Boolean
  Question   Question @relation(fields: [questionId], references: [id] , onDelete: Cascade)
}

model Question {
  id             String   @id @default(uuid())  
  quizId         String
  questionText   String
  points         Int
  negativePoints Int
  createdAt      DateTime @default(now())
  Option         Option[]
  Quiz           Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model Quiz {
  id          String        @id @default(uuid())
  quizNumber  Int
  title       String
  categoryId  String
  timeLimit   Int
  totalPoints Int
  createdAt   DateTime      @default(now())
  Question    Question[]
  Category    Category      @relation(fields: [categoryId], references: [id])
  QuizAttempt QuizAttempt[]
  Room Room[]

}

model QuizAttempt {
  id        String   @id @default(uuid())
  userId    String?
  quizId    String
  score     Int
  total     Int
  createdAt DateTime @default(now())
  guestId   String?
  questions Json
  timeTaken Int
  Quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  User      User?    @relation(fields: [userId], references: [id])

  @@index([quizId])
  @@index([userId])
}


enum FriendStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum RoomState {
  CREATED
  WAITING
  COUNTDOWN
  PLAYING
  FINISHED
  ABANDONED
}


model Room {
  roomName String @unique  
  quizId String
quiz   Quiz @relation(fields: [quizId], references: [id])

   id          String     @id @default(uuid())
  hostId      String
  state       RoomState  @default(CREATED)
  maxPlayers  Int
  createdAt   DateTime   @default(now())
  startedAt   DateTime?
  endedAt     DateTime?

  host        User       @relation("RoomHost", fields: [hostId], references: [id])
  players     RoomPlayer[]
  questions   RoomQuestion[]
  answers     PlayerAnswer[]
  events      RoomEvent[]
    @@index([quizId])
  @@index([hostId])

}

model RoomPlayer {
  id               String   @id @default(uuid())
  pointsEarned     Int      @default(0)
  avatarSnapshot   String?
  hasJoinedGame    Boolean  @default(false)
  gameJoinedAt     DateTime?

  roomId           String
  userId           String
  usernameSnapshot String
  score            Int      @default(0)
  joinedAt         DateTime @default(now())
  leftAt           DateTime?
  isHost           Boolean  @default(false)

  room   Room @relation(fields: [roomId], references: [id])
  user   User @relation(fields: [userId], references: [id])

  @@unique([roomId, userId]) // user can't join same room twice
   @@index([roomId])
  @@index([userId])
}

model RoomQuestion {
  id            String   @id @default(uuid())
  roomId        String
  questionId    String
  questionOrder Int
  startedAt     DateTime?
  endedAt       DateTime?

  room      Room     @relation(fields: [roomId], references: [id])
  answers   PlayerAnswer[]
   @@index([roomId])
  @@index([questionId])
}

model PlayerAnswer {
  id              String   @id @default(uuid())
  roomId          String
  roomQuestionId  String
  userId          String
selectedOptionId String
  isCorrect       Boolean
  pointsEarned    Int      @default(0)
  answeredAt      DateTime @default(now())
  responseTimeMs  Int
  

  room          Room         @relation(fields: [roomId], references: [id])
  roomQuestion  RoomQuestion @relation(fields: [roomQuestionId], references: [id])
  user          User         @relation(fields: [userId], references: [id])

  @@unique([roomQuestionId, userId])

  @@index([roomId])
  @@index([userId])
    @@index([roomQuestionId])

}

model RoomEvent {
  id        String   @id @default(uuid())
  roomId    String
  userId    String?
  eventType String
  payload   Json
  createdAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id])
  user User? @relation(fields: [userId], references: [id])

  @@index([roomId])
}
