generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id        String   @id
  name      String   @unique
  createdAt DateTime @default(now())
  icon      String   @default("ðŸ“¦")
  Quiz      Quiz[]
}

model Friend {
  id                           String       @id
  senderId                     String
  receiverId                   String
  status                       FriendStatus @default(PENDING)
  createdAt                    DateTime     @default(now())
  User_Friend_receiverIdToUser User         @relation("Friend_receiverIdToUser", fields: [receiverId], references: [id])
  User_Friend_senderIdToUser   User         @relation("Friend_senderIdToUser", fields: [senderId], references: [id])

  @@unique([senderId, receiverId])
}

model Option {
  id         String   @id
  questionId String
  text       String
  isCorrect  Boolean
  Question   Question @relation(fields: [questionId], references: [id])
}

model Question {
  id             String   @id
  quizId         String
  questionText   String
  points         Int
  negativePoints Int
  createdAt      DateTime @default(now())
  Option         Option[]
  Quiz           Quiz     @relation(fields: [quizId], references: [id])
}

model Quiz {
  id          String        @id
  quizNumber  Int
  title       String
  categoryId  String
  timeLimit   Int
  totalPoints Int
  createdAt   DateTime      @default(now())
  Question    Question[]
  Category    Category      @relation(fields: [categoryId], references: [id])
  QuizAttempt QuizAttempt[]
}

model QuizAttempt {
  id        String   @id
  userId    String?
  quizId    String
  score     Int
  total     Int
  createdAt DateTime @default(now())
  guestId   String?
  questions Json
  timeTaken Int
  Quiz      Quiz     @relation(fields: [quizId], references: [id])
  User      User?    @relation(fields: [userId], references: [id])

  @@index([quizId])
  @@index([userId])
}

model User {
  id                             String        @id @default(cuid())
  username                       String        @unique
  email                          String        @unique
  password                       String
  avatar                         String?
  createdAt                      DateTime      @default(now())
  Friend_Friend_receiverIdToUser Friend[]      @relation("Friend_receiverIdToUser")
  Friend_Friend_senderIdToUser   Friend[]      @relation("Friend_senderIdToUser")
  QuizAttempt                    QuizAttempt[]
}

enum FriendStatus {
  PENDING
  ACCEPTED
  BLOCKED
}
