{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "rootDir": ".",
    "outDir": "dist",

    "declaration": true,
    "emitDeclarationOnly": false,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "generated"],
  "exclude": ["node_modules", "dist"]
}
