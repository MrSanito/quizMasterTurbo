{
  "name": "http",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@repo/*": [
        "../../packages/*/dist"
      ]
    },
    "strict": true
  },
  "scripts": {
    "dev": "nodemon --require dotenv/config src/index.ts",
    "build": "tsc --project tsconfig.json",
    "postbuild": "node -e \"const fs=require('fs');const path=require('path');const distDir=path.join(__dirname,'dist');const nestedDir=path.join(distDir,'apps','http','src');if(fs.existsSync(nestedDir)){const files=fs.readdirSync(nestedDir);files.forEach(f=>{const src=path.join(nestedDir,f);const dest=path.join(distDir,f);if(fs.existsSync(dest)){if(fs.statSync(dest).isDirectory())fs.rmSync(dest,{recursive:true});else fs.unlinkSync(dest);}fs.renameSync(src,dest);});fs.rmSync(path.join(distDir,'apps'),{recursive:true});fs.rmSync(path.join(distDir,'packages'),{recursive:true});}\"",
    "start": "npm run build && node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "bcrypt": "^6.0.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@repo/db": "*",
    "@types/jsonwebtoken": "^9.0.10",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3"
  }
}
